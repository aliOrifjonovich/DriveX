{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "ignorePatterns": [".eslintrc.cjs"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-console": 1,
    "no-undef": "error"
  }
}
